# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


GET     /users                      controllers.UsersController.index
POST    /users                      controllers.UsersController.create
GET     /users/new                  controllers.UsersController.newUser
POST    /users/:uuid                controllers.UsersController.update(uuid: String)
GET     /users/:uuid/edit           controllers.UsersController.edit(uuid: String)
GET     /users/:uuid                controllers.UsersController.show(uuid: String)

GET     /tasks/new                  controllers.TasksController.newTask
POST    /tasks                      controllers.TasksController.create
